* {
  margin: 0;
}

:root {
  --body-home-page: #501720;
  --background-button-inscription: red;
  --background-burger: white;
}

@media screen and (min-width: 320px) {
  .body-home-page {
    background-color: var(--body-home-page);
    width: 100%;
    height: 100%;
    position: absolute;
  }

  .header {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 3em;
  }

  .menu {
    position: absolute;
    right: 0;
    width: 3em;
    height: 3em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .button-inscription {
    position: absolute;
    right: 4em;
    top: 0.5em;
    background-color: var(--background-button-inscription);
    font-size: 1em;
    color: white;
    border: none;
    padding: 0.5em;
    border-radius: 1.5em;
    font-family: arial;
    padding-left: 1em;
    padding-right: 1em;
    font-weight: bold;
    cursor: pointer;
  }

  .burger {
    width: 80%;
    height: 0.3em;
    margin-top: 0.3em;
    position: relative;
    background-color: var(--background-burger);
    border-radius: 1em;
  }

  .click-burger {
    width: 100%;
    height: 100%;
    border: none;
    background-color: blue;
    position: absolute;
    color: transparent;
    background-color: transparent;
    cursor: pointer;
  }

  .burger-home {
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: var(--body-home-page);
  }

  .x {
    background-color: var(--body-home-page);
    border: none;
    position: absolute;
    right: 0;
    font-size: 3.5em;
    color: white;
  }

  .logo {
    width: 15%;
    height: 100%;
    position: absolute;
  }

.ins-co {
    width: 80%;
    height: 30em;
    background-color: grey;
    position: absolute;
    left: 10%;
    top: 5em;
  }

.
}

@media screen and (min-width: 768px) {
  .logo {
    width: 10%;
  }
}

@media screen and (min-width: 1024px) {
  .logo {
    width: 5%;
  }
}
